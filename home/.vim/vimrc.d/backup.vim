set patchmode=                      " オリジナルファイルを作らない
set noautowrite                     " 自動保存無効
set backup                          " バックアップファイルを作る
set nowritebackup
set undofile                        " undoファイル生成
set swapfile                        " swapファイル生成
set undodir=~/.vim/tmp/undo
set directory=~/.vim/tmp/swap
set backupdir=~/.vim/tmp/backup
